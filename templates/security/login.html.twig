<!DOCTYPE html>
<html lang="en">
    {% include "commun/header.html.twig" %}
    <body>
        <div class="block-section bg-color4">
            <div class="container">
                <div class="panel panel-md">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12" style="padding-left:40px;padding-right:40px;padding-bottom : 40px;">
                                <!-- buttons top -->

                                <!-- end buttons top --><div class="white-space-10"> </div>
                                <h3 class="text-center">Connexion</h3>
                                <hr>
                                <!-- form login -->
                                {% if error is defined %}
                                    <h3>jqsdjqsdjqs
                                        {{dump(error)}}</h3>
                                    {% if error %}
                                        <h5 style="color:red;font-weight:bold;">Les identifiants sont incorrects</h5>
                                    {% endif %}
                                {% endif %}
                                <form action={{path('app_login')}} method="POST">
                                    <input type="hidden" name="referer" value="{{app.request.headers.get('referer')}}"/>
                                    <div class="form-group">
                                        <label>Nom d'utilisateur</label>
                                        <input name="username" {% if last_username is defined %} value="{{ last_username }}" {% endif %} type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Mot de passe</label>
                                        <input name="password" type="password" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-xs-6">
                                                <div class="checkbox flat-checkbox">
                                                    <label>
                                                        <input type="checkbox">
                                                        <span class="fa fa-check" name="rememberMe"></span>
                                                        Garder ma session ouverte.
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-xs-6 text-right">
                                                <p class="help-block">
                                                    <a href="#myModal" data-toggle="modal">Mot de passe oublié?</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <div class="form-group no-margin">
                                        <button type="submit" id="submit" class="btn btn-theme btn-lg btn-t-primary btn-block">Connexion</button>
                                    </div>
                                </form>
                                <!-- form login -->

                            </div>
                        </div>
                    </div>
                </div>

                <div class="white-space-20"></div>
                <div class="text-center color-white">Vous n’êtes pas encore membre ? &nbsp;
                    <a href="#" class="link-white">
                        <strong>Créez un compte gratuitement</strong>
                    </a>
                </div>
            </div>
        </div>

        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="assets/plugins/jquery.js"></script>
        <script src="assets/plugins/jquery.easing-1.3.pack.js"></script>
        <!-- jQuery Bootstrap -->
        <script src="assets/plugins/bootstrap-3.3.2/js/bootstrap.min.js"></script>
        <!-- Lightbox -->
        <script src="assets/plugins/magnific-popup/jquery.magnific-popup.min.js"></script>
        <!-- Theme JS -->
        <script src="assets/theme/js/theme.js"></script>

        <!-- maps -->
        <script src="http://maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"></script>
        <script src="assets/plugins/gmap3.min.js"></script>
        <!-- maps single marker -->
        <script src="assets/theme/js/map-detail.js"></script>

    </body>
</html>