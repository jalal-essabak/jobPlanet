<!DOCTYPE html>
<html lang="en" >
    {% include "commun/header.html.twig" %}
  <body>
    <!-- wrapper page -->
    <div class="wrapper">
      <!-- main-header -->
      <header class="main-header">


        <!-- main navbar -->
        <nav class="navbar navbar-default main-navbar hidden-sm hidden-xs">
          <div class="container">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

              <ul class="nav navbar-nav">
                <li class=""><a href="{{path('confirm_registrations')}}"><strong>Inscriptions en attente</strong></a></li>
                <li class=""><a href="{{path('confirm_jobs')}}"><strong>Offres d'emploi en attente</strong></a></li>
                <li  class=""><a href="{{path('admin_password_change')}}"><strong>Modifier votre mot de passe</strong></a></li>
              </ul>      
              {% if app.user %}
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="link-profile dropdown-toggle" data-toggle="dropdown">
                            {{ app.user.username }}
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="{{path('admin_password_change')}}">
                                    Changement de mot de passe</a>
                            </li>
                        </ul>
                    </li>
                    <li class="link-btn">
                        <a href="{{path('admin_logout')}}">
                            <span class="btn btn-theme  btn-pill btn-xs btn-line">Se d√©connecter</span>
                        </a>
                    </li>
                </ul>
            {% endif %}
            </div>
          </div>
        </nav><!-- end main navbar -->

        <!-- mobile navbar -->
        <!-- mobile navbar -->


    
      </header><!-- end main-header -->


      <!-- body-content -->
      <div class="body-content clearfix" >

        <div class="bg-color1">
          <div class="container">
         
            <div class="col-md-12 col-sm-12">
              <div class="block-section box-side-account">
                <h3 class="no-margin-top">Confirmation d'offres d'emploi</h3>
                <hr/>
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Titre de l'offre</th>
                        <th>Nom d'entreprise</th>
                        <th>Secteur</th>
                        <th>Location</th>
                        <th class="text-right">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                      <tr>
                        <th scope="row">{{job.id}}</th>
                        <td>{{job.job_title}}</td>
                        <td>{{job.company_name}}</td>
                        <td>{{job.secteur}}</td>
                        <td>{{job.location}}</td>
                        <td class="text-right"><a href="{{path('confirm_job',{'id':job.id})}}" class="btn btn-theme btn-xs btn-success">Confirmer</a></td>
                      </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>

                <!-- pagination -->
   

              </div>
            </div>
          </div>
        </div>        
      </div><!--end body-content -->


      <!-- main-footer -->
      <footer class="main-footer">


        <div class="container">
          <div class="row">
            <div class="col-sm-6">
              <ul class="list-inline link-footer text-center-xs">
                <li><a href="index.html">Home</a></li>
                <li><a href="blog.html">Blog</a></li>
                <li><a href="about.html">About Us</a></li>
                <li><a href="contact.html">Contact Us</a></li>
              </ul>
            </div>
            <div class="col-sm-6 ">
              <p class="text-center-xs hidden-lg hidden-md hidden-sm">Stay Connect</p>
              <div class="socials text-right text-center-xs">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-youtube-play"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
              </div>
            </div>
          </div>
        </div>
      </footer><!-- end main-footer -->

    </div><!-- end wrapper page -->




    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="assets/plugins/jquery.js"></script>
    <script src="assets/plugins/jquery.easing-1.3.pack.js"></script>
    <!-- jQuery Bootstrap -->
    <script src="assets/plugins/bootstrap-3.3.2/js/bootstrap.min.js"></script>
    <!-- Lightbox -->
    <script src="assets/plugins/magnific-popup/jquery.magnific-popup.min.js"></script>
    <!-- Theme JS -->
    <script src="assets/theme/js/theme.js"></script>

    <!-- maps -->
    <script src="http://maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"></script> 
    <script src="assets/plugins/gmap3.min.js"></script>
    <!-- maps single marker -->
    <script src="assets/theme/js/map-detail.js"></script>

  </body>
</html>