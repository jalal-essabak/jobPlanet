                          <h3 class="no-margin-top"><a href="/test/{{job.id}}" class="">{{job.job_title}}<i class="fa fa-link color-white-mute font-1x"></i></a></h3>
                          <h5><span class="color-black">{{job.company_name}}</span> </h5>
                          <p class="text-truncate ">{{job.description}}</p>
                          <div>
                            <span class="color-white-mute">lorem upsem</span> -
                            <a href="#" class="btn btn-theme btn-xs btn-default">more ...</a>
                          </div>
                        </div>
                      </div>
                    </div><!-- end item list -->
                    {% endfor %}
                  </div>
                

                  
                 

                </div><!-- end box listing -->


              </div>
              <div class="col-md-3">
                <div class="block-section-sm side-right">
                  <div class="row">
                    <div class="col-xs-6">
                      <p><strong>Sort by: </strong></p>
                    </div>
                    <div class="col-xs-6">
                      <p class="text-right">
                        <strong>Relevance</strong> - <a href="#" class="link-black"><strong>Date</strong></a>
                      </p>
                    </div>
                  </div>

                  <div class="result-filter">
                    
                    

                    <h5 class="font-bold  margin-b-20"><a href="#s_collapse_2" data-toggle="collapse" >Title <i class="fa ic-arrow-toogle fa-angle-right pull-right"></i></a>  </h5>
