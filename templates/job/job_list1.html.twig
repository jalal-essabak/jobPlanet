{% extends 'base.html.twig' %}
{% block body %}
      <!-- body-content -->
      <div class="body-content clearfix" >

        <div class="bg-color2">
          <div class="container">
            <div class="row">
              <div class="col-md-9">

                <!-- box listing -->
                <div class="block-section-sm box-list-area">

                   <!-- item list -->  
                  <div class="box-list">
                    {% for job in job_result %}
